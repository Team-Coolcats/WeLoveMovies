
@{
    ViewData["Title"] = "DisplaySearchResults";
}

@model MovieRootObject



<h1>DisplaySearchResults</h1>
<div style="margin:auto;">
    <table style="text-align:center;" class="table table-bordered">
        <tr>
            <th>Title:</th>
            <th>Release Year:</th>
            <th>Type:</th>
            <th>Poster:</th>
            <th>Add to Favorites:</th>
        </tr>

        @if (Model.Search.Length > 0)
        {
            for (int i = 0; i < Model.Search.Length; i++)
            {
                <tr>
                    <td>@Model.Search[i].Title</td>

                    <td>@Model.Search[i].Year</td>

                    <td>@Model.Search[i].Type</td>

                    <td><img style="width:200px;" src="@Model.Search[i].Poster" /></td>

                    <td><a class="btn btn-success" href="../Favorites/AddToFavorites?imdbID=@Model.Search[i].imdbID">Add</a></td>
                </tr>
            }
        }
        else 
        { 
            <p>No results found :(</p>
        }



    </table>
</div>