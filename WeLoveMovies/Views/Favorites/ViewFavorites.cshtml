
@{
    ViewData["Title"] = "ViewFavorites";
}

@model List<MovieDetail>
<style>
    body {
        background-image: url(https://data.whicdn.com/images/221000530/original.jpg);
    }

    h1 {
        background: rgb(255, 80, 61);
        background: rgba(255, 80, 61, 0.90);
        font-family: Cooper;
    }

    .text-center {
        display: table;
        width: 100%;
        height: 100%;
        text-align: center;
    }

    .text-center-container {
        display: table-cell;
        width: 100%;
        vertical-align: middle;
    }

    .text-center-box {
        display: inline-block;
        padding: 50px;
        background-color: #ffffff;
    }
</style>
<h1>View Favorites</h1>

<table class="table table-hover table-dark">
    <tr>
        <th></th>
        <th>Title</th>
        <th>Year Released</th>
        <th>Genre</th>
        <th>Rated</th>
        <th>Actors</th>
    </tr>
    @foreach (MovieDetail film in Model)
    {
        <tr>
            @if (film.Poster == "N/A")
            {
                <td style="vertical-align:middle"><img style="width:50px;" src="https://i.imgur.com/KznY2tM.jpg" /></td>
            }
            else
            {
                <td style="vertical-align:middle"><img style="width:50px;" src="@film.Poster" /></td>
            }
            <td>@film.Title</td>
            <td>@film.Year</td>
            <td>@film.Genre</td>
            <td>@film.Rated</td>
            <td>@film.Actors</td>
            <td><a href="../Favorites/DeleteFavorite?imdbID=@film.imdbID" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }

</table>

